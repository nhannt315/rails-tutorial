<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user-info"></section>
    </aside>
  </div>
<% end %>
<div class="center jumbotron">
  <h1><%= t "app_name" %></h1>
  <h1><%= t ".title" %></h1>
  <h2>
    <%= t(".info",
          link: link_to("Ruby on Rails Tutorial",
                        "http://www.railstutorial.org/")
        ).html_safe
    %>
  </h2>
  <%= link_to t("sign_up.title"), "#", class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png"), "http://rubyonrails.org" %>
